<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a href="<%= root_path %>" class="navbar-brand">Blog</a>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main">

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li><a style="font-size: 1em">
              <%= current_user.email %> </a>
            </li>
            <li>
              <%= link_to(destroy_user_session_path, method: :delete, style:"font-size: 1.3em", title: "Logout") do %>
                  <i class="fa fa-power-off"></i>
              <% end %>
            </li>
        <% else %>
            <li>
              <%= link_to(new_user_session_path, style:"font-size: 1.3em", title: "Login") do %>
                  <i class="fa fa-sign-in"></i>
              <% end %>
            </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
